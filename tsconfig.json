{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "tests-examples/**/*.ts",
        "./*.ts",
        "tests/playwright.config.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}